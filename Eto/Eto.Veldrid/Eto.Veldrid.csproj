<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <Title>Veldrid Control for Eto.Forms</Title>
    <Description>
      This provides the control to use in your Eto.Forms application.
      Add the platform-specific package for each platform you wish to support. E.g. Eto.Veldrid.Gtk, Eto.Veldrid.Mac64, Eto.Veldrid.Wpf, etc.
    </Description>
    <TargetFramework>net9.0</TargetFramework>
    <LangVersion>12</LangVersion>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Eto.Forms" Version="2.9.0-ci-20250329.14150108340" />
    <PackageReference Include="ppy.Veldrid" Version="4.9.62-gca0239da6b" />
    <PackageReference Include="ppy.Veldrid.OpenGLBindings" Version="4.9.62-gca0239da6b" />
    <PackageReference Include="ppy.Vk" Version="1.0.26" />
  </ItemGroup>
  
</Project>
